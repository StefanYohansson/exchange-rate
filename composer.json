{
    "name": "quicktech-as/exchange-rate",
    "description": "Package Laravel to conversion using exchange rates.",
    "keywords": ["laravel", "illuminate", "currency", "exchange rate"],
    "license": "MIT",
    "authors": [
        {
            "name": "Gilberto",
            "email": "gilberto@quicktech.no"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "^5.2",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Quicktech\\ExchangeRate\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Quicktech\\Test\\ExchangeRate\\": "./test"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
